<?xml version="1.0" encoding="utf-8"?>
<layouts:VLayout creationComplete="init()" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:layouts="org.ludo.layouts.*" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import org.common.utils.XTextFlow;
			
			private var txtFlow:XTextFlow;
			private function init():void
			{
				txtFlow=new XTextFlow(this,null,false,null,this.width);
				txtFlow.loadByFilePath("config/initializers/textflows/admin.xml","assets/css/startmain.css");
			}
			protected override function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
			{
				if(txtFlow!=null)
				{
					txtFlow.resize(unscaledWidth);
				}
				super.updateDisplayList(unscaledWidth, unscaledHeight);
			}	    			
		]]>
	</fx:Script>
	
</layouts:VLayout>
